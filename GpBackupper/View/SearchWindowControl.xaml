<UserControl x:Class="GpBackupper.SearchWindowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Extensions="clr-namespace:Extensions;assembly=Extensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:GpBackupper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:GpBackupper.View"
    d:DataContext="{d:DesignInstance Type=view:Data}"
    d:DesignHeight="350" d:DesignWidth="450" UseLayoutRounding="True"
    mc:Ignorable="d">
    <GroupBox Header="BİLGİSAYARDAKİ DOSYALAR">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <UniformGrid Grid.ColumnSpan="2" IsEnabled="{Binding Active}" Columns="2">
                <ComboBox ItemsSource="{Binding Drives, Source={StaticResource FolderDataProvider}}" SelectedItem="{Binding SelectedDrive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16" Height="16">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Shell32.dll" />
                                            <Binding Source="8" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <TextBlock Text="{Binding Mode=OneWay}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button Command="{Binding SearchComputerFiles}" CommandParameter="{Binding Extension}">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="16" Height="16">
                            <Image.Source>
                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                    <Binding Source="Shell32.dll" />
                                    <Binding Source="22" />
                                </MultiBinding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="BİLGİSAYARDA ARA" />
                    </StackPanel>
                </Button>
            </UniformGrid>
            <UniformGrid x:Name="Ug"
                Grid.Row="1" Grid.ColumnSpan="2"
                Columns="2">
                <UniformGrid.DataContext>
                    <local:MainViewModel />
                </UniformGrid.DataContext>
                <TextBox Text="{Binding Data.DataSavePath}" IsReadOnly="True" />
                <Button Grid.Column="1" Command="{Binding SetSaveLocation, Mode=OneWay}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Width="16" Height="16">
                                <Image.Source>
                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                        <Binding Source="Shell32.dll" />
                                        <Binding Source="4" />
                                    </MultiBinding>
                                </Image.Source>
                            </Image>
                            <TextBlock Text="KAYIT KLASÖRÜ" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </UniformGrid>
            <ListBox Grid.Row="2"
                ItemsSource="{Binding FoundFiles}"
                Extensions:ListBoxHelper.SelectedItems="{Binding SelectedFiles}"
                SelectionMode="Extended">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox VerticalContentAlignment="Center" IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}">
                            <TextBlock>
                                <Hyperlink Command="{Binding DataContext.OpenFile, RelativeSource={RelativeSource AncestorType=local:MainWindow}}" CommandParameter="{Binding Mode=OneWay}">
                                    <Run Text="{Binding Mode=OneWay}" />
                                </Hyperlink>
                            </TextBlock>
                        </CheckBox>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Grid.Row="2" Grid.Column="1"
                Command="{Binding CompressSelectedFiles, Mode=OneWay}"
                CommandParameter="{Binding DataContext, ElementName=Ug}">
                <Button.Content>
                    <StackPanel>
                        <Image Width="32" Height="32">
                            <Image.Source>
                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                    <Binding Source="zipfldr.dll" />
                                    <Binding Source="0" />
                                </MultiBinding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="DOSYALARI&#x0a;SIKIŞTIR" />
                    </StackPanel>
                </Button.Content>
            </Button>
        </Grid>
    </GroupBox>
</UserControl>
